{
  "name": "@rsthn/xui",
  "version": "2.0.0",
  "description": "UI Toolkit to build web based tools.",
  "main": "main.js",
  "scripts": {
    "test": "echo Ok",
    "build": "npm-run-all --parallel build-css build-js",
    "watch": "npm-run-all --parallel watch-css watch-js",
    "build-css": "lessc src/xui.less dist/xui.css",
    "watch-css": "less-watch-compiler src/css dist ../xui.less",
    "build-js": "browserify src/main.js | uglifyjs > dist/xui.js",
    "watch-js": "watchify src/main.js -o dist/xui.js -v"
  },
  "bin": {
    "xui": "./cli.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsthn/xui.git"
  },
  "author": "RedStar Technologies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rsthn/xui/issues"
  },
  "homepage": "https://github.com/rsthn/xui#readme",
  "dependencies": {
    "@rsthn/rin": "^2.0.3"
  },
  "devDependencies": {
    "browserify": "^16.5.0",
    "less": "^3.10.3",
    "less-watch-compiler": "^1.14.6",
    "npm-run-all": "^4.1.5",
    "uglifyjs": "^2.4.11",
    "watchify": "^3.11.1"
  }
}
